{
  "name": "cdn-file-service",
  "version": "1.0.0",
  "description": "CDN file error handling module",
  "type": "module",
  "main": "dist/fileErrorHandler.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "jest": "^30.0.3",
    "ts-jest": "^29.1.2",
    "typescript": "^4.9.5",
    "vitest": "^0.34.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.js",
      "**/tests/**/*.test.ts"
    ]
  }
}
