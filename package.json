{
  "name": "cdn-file-service",
  "version": "1.0.0",
  "description": "CDN file error handling module",
  "type": "module",
  "main": "dist/fileErrorHandler.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "jest": "^30.0.2",
    "ts-jest": "^29.1.2",
    "typescript": "^4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        { "useESM": true }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [".ts"],
    "testMatch": [
      "**/test/**/*.test.js",
      "**/tests/**/*.test.ts"
    ]
  }
}